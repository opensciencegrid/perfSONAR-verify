#!/usr/bin/perl

# Sample Usage:
# verify --central psds1.grid.iu.edu --ma packet-count-lost --n 2
# verify --central psds1.grid.iu.edu --ma packet-count-sent --n 2
# verify --central psds1.grid.iu.edu --ma throughput --n 12
# verify --central psds-itb.grid.iu.edu --ma histogram-owdelay --n 4
# verify --central fermicloud035.fnal.gov --port 9090 --ma histogram-owdelay --n 4

# verify --ma packet-loss-rate --central psds-itb.grid.iu.edu --n 1 --action validate

# Requesting specific perfSONAR hosts; --action all => show Alteration, Validation, and Coverage differences
# verify --central psds1.grid.iu.edu --ma throughput --n 2 --nodes 193.109.172.188,psum02.aglt2.org --start 142989031 --end 143051431 --action all

# TODO
